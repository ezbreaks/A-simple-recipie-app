<%= render 'shared/errors', obj: @recipe %>

<div class="row">
  <div class="well col-md-8">
    <%= form_for @recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :summary %>
    <%= f.text_field :summary %>
    
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>    
    
    <%= f.submit class: 'btn btn-success' %>
    
    <% end %>
  </div>
</div>